@model List<OrganizationalApp.Models.Entities.Users>

<!-- Page Heading -->
<h1 class="text-center my-4 text-primary">Employee's</h1>

<!-- Table Container -->
<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Level</th>
                    <th>PK Code</th>
                    <th>FK Code</th>
                    <th>Code</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Level</td>
                        <td>@user.PkCode</td>
                        <td>@user.FkCode</td>
                        <td>@user.Code</td>
                        <td class="text-center">
                            <!-- Edit Button -->
                            <a class="btn btn-primary btn-sm" asp-controller="Emp" asp-action="Edit" asp-route-id="@user.Id">Edit</a>

                            <!-- Delete Button inside a Form for post request -->
                            <form method="post" class="d-inline-block">
                                <button type="submit" class="btn btn-danger btn-sm" asp-controller="Emp" asp-action="Delete" asp-route-id="@user.Id">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Bootstrap CSS & JS for extra styling -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>








