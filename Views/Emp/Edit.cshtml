@model OrganizationalApp.Models.Entities.Users


<h1>Edit Employee</h1>

@if (Model is null)
{
    <p>No Student is found with this id</p>
}

else
{

    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Level</label>
            <input type="number" class="form-control" asp-for="Level" />
        </div>

        <div class="mt-3">
            <label class="form-label">Pkcode</label>
            <input type="number" class="form-control" asp-for="PkCode" />
        </div>

        <div class="mt-3">
            <label class="form-label">Fkcode</label>
            <input type="number" class="form-control" asp-for="FkCode" />
        </div>

        <div class="mt-3">
            <label class="form-label">Code</label>
            <input type="number" class="form-control" asp-for="Code" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">update</button>
        </div>

    </form>
}