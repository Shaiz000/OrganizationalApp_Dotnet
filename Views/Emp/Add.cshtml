@model OrganizationalApp.Models.AddUsersViewModel

<!-- Page Heading -->
<h1 class="text-center my-4 text-primary">Add Employee</h1>

<!-- Form Container -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <h3 class="card-title text-center mb-4">Employee Information</h3>
                <form method="post">
                    <!-- Name Input -->
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" class="form-control" asp-for="Name" id="Name" placeholder="Enter employee's name" required />
                    </div>

                    <!-- Level Input -->
                    <div class="mb-3">
                        <label for="Level" class="form-label">Level</label>
                        <input type="number" class="form-control" asp-for="Level" id="Level" placeholder="Enter level" required />
                    </div>

                    <!-- PkCode Input -->
                    <div class="mb-3">
                        <label for="PkCode" class="form-label">PK Code</label>
                        <input type="number" class="form-control" asp-for="PkCode" id="PkCode" placeholder="Enter PK Code" required />
                    </div>

                    <!-- FkCode Input -->
                    <div class="mb-3">
                        <label for="FkCode" class="form-label">FK Code</label>
                        <input type="number" class="form-control" asp-for="FkCode" id="FkCode" placeholder="Enter FK Code" required />
                    </div>

                    <!-- Code Input -->
                    <div class="mb-3">
                        <label for="Code" class="form-label">Code</label>
                        <input type="number" class="form-control" asp-for="Code" id="Code" placeholder="Enter Code" required />
                    </div>

                    <!-- Submit Button -->
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary w-100">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS & JS for extra styling -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>










